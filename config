#redshift -l 54.35:18.65 -m randr -t 5500:4500 -g 0.75:0.75:0.75 &
for_window [class="MPlayer"] floating enable
for_window [instance="gimp"] floating enable
for_window [class="Empathy"] floating enable
for_window [class="HipChat"] floating enable
for_window [class="gcr-prompter"] floating enable

bar {
  position top
  status_command ~/.i3/conky
  #tray_output both
  colors { 
    statusline #AAAAAA
    background #333333
    focused_workspace $blue #00AAAA
    inactive_workspace $gray1 $gray1 #AAAAAA
  }
}


# AUTOSTART
exec --no-startup-id xfce4-volumed
exec --no-startup-id gnome-screensaver
exec --no-startup-id nm-applet
exec feh --bg-scale /home/skroes/.i3/Sochi-Shaun-White.jpg
