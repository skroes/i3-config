root = true

[Makefile]
indent_size = 2
indent_style = tab

[*.mk]
indent_size = 2
indent_style = tab

[config]

[*]
charset = utf-8
indent_size = 2
indent_style = space

# insert_final_newline: set to "true" to ensure file ends with a newline when saving
# and "false" to ensure it doesn't.
insert_final_newline = true

# trim_trailing_whitespace:
# set to "true" to remove any whitespace characters preceding newline characters
# and "false" to ensure it doesn't.
trim_trailing_whitespace = true
