exec --no-startup-id i3-msg 'workspace 2; exec xchat;'
exec --no-startup-id i3-msg 'workspace 4; exec firefox;'
exec --no-startup-id i3-msg 'workspace 3; exec terminator;'
#exec nitrogen --restore

# DPMS to blank your screen or to suspend/poweroff your monitor. Will suspend your monitor after xxx seconds
exec --no-startup-id xset dpms 1200


