#!/bin/bash

set -e
CURMONTH=$(date +%m)
FILE="$*"



echo $FILE
FILESANE="${FILE// /_}"
echo $FILESANE

mv -f "$FILE" $FILESANE | true

# if /leesfolder${CURMONTH}/ not there, create it
/home/serkroes/go/bin/rmapi cd Leesfolder | grep -wi error || /home/serkroes/go/bin/rmapi mkdir /Leesfolder
/home/serkroes/go/bin/rmapi cd Leesfolder/leesfolder${CURMONTH} | grep -wi error || /home/serkroes/go/bin/rmapi mkdir /Leesfolder/leesfolder${CURMONTH}

# put the file
echo put "${FILESANE}" /Leesfolder/leesfolder${CURMONTH}/ | /home/serkroes/go/bin/rmapi

# archive the file
test -d /home/serkroes/Downloads/archive/uploaded_to_remarkable || mkdir -p /home/serkroes/Downloads/archive/uploaded_to_remarkable
mv "${FILESANE}" /home/serkroes/Downloads/archive/uploaded_to_remarkable
